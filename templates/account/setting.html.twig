{% extends 'base.html.twig' %}

{% block title %}Modif Password{% endblock %}

{% block content %}
    <div>
        {% if notification %}
            <div class="alert alert-info">{{ notification }}</div>
            <hr>
        {% endif %}
        <h1>Modifier mon mot de passe</h1>
        <h2>Bienvenue {{ app.user.firstname }} !</h2>
        <div class="mt-5">
            <hr>
            <div id="form">
                <div id="form-content" class="">

                    <h2 class="text-center">Setting</h2>
                <div class="row g-2">
                    {{ form_start(form, {'attr': {'class': 'row g-2 mt-5'}}) }}
                        <div class="col-6">
                        {{ form_row(form.firstname, {'attr': {'class': 'label-signup'}}) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.lastname, {'attr': {'class': 'label-signup'}}) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.email, {'attr': {'class': 'label-signup','placeholder': '@'}}) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.password, {'attr': {'class': 'label-signup'}}) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.Allergie, {'attr': {'class': 'label-signup'}}) }}
                            <div class="alert alert-danger mt-5" role="alert">
                                Attention ! Vous devez renseignez vos allergie
                            </div>
                            {{ form_row(form.alergieType, {'attr': {'class': 'label-signup pl-2'}}) }}
                        </div>


                        <div class="mt-3 text-center">
                            <div class="btn-rez-countainer">
                                {{ form_row(form.submit, {'attr': {'class': 'btn btn-outline-success btn-rez text-center'}}) }}
                                <a href="{{ path('app_account') }}" role="button" class="btn btn-outline-dark mb-3 btn-rez" id="btn-setting">Retour</a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>



        </div>
    </div>




{% endblock %}